<% layout('./layouts/boilerplate') -%>
<h1>New Dish</h1>

<div class="container">
    <div class="row mt-5 mb-2">
        <div class="col-md-2">
            <a href="/dishes/ChineseDishes" class="btn btn-dark">Go Back</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 offset-md-3 d-flex flex-column">
                <form method="POST" action="/dishes" class="needs-validation" enctype="multipart/form-data" novalidate>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input name="name" id="name" class="form-control" required />
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image</label>
                        <input type="file" name="image" id="image" class="form-control" />
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="description" id="description" class="form-control" required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input name="location" id="location" class="form-control" required />
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-success">Create</button>
                    </div>
                </form>
        </div>
    </div>
</div>